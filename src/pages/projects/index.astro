---
export const prerender = true;
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const projects = (await getCollection("projects")).sort(
  (a, b) => a.data.order - b.data.order
);
---

<Layout title={`${SITE_TITLE} - Projects`} description={SITE_DESCRIPTION}>
  <div class="h-full md:p-16 p-4 flex flex-col gap-8">
    <h1 class="dark:text-white font-bold text-xl text-center">
      Here are my personal projects
    </h1>
    <div class="dark:text-white flex flex-wrap gap-2">
      {
        projects.map((post) => (
          <div class="rounded-md p-4 flex items-center justify-between dark:bg-stone-900 hover:dark:bg-stone-700 transition-all w-full">
            <a
              class="w-full py-4 -my-4 pl-4 -ml-4"
              href={`/projects/${post.slug}/`}
            >
              <h2 class="font-semibold">{post.data.title}</h2>
              <h3 class="text-sm">{post.data.shortDescription}</h3>
            </a>
            <div class="md:flex flex-row gap-3 hidden">
              {post.data.githubUrl ? (
                <a href={post.data.githubUrl} target="_blank">
                  <span class="sr-only">View this repo on github</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-github"
                  >
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                    <path d="M9 18c-4.51 2-5-2-7-2" />
                  </svg>
                </a>
              ) : null}
              {post.data.websiteUrl ? (
                <a href={post.data.websiteUrl} target="_blank">
                  <span class="sr-only">View the live website</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-globe-2"
                  >
                    <path d="M21.54 15H17a2 2 0 0 0-2 2v4.54" />
                    <path d="M7 3.34V5a3 3 0 0 0 3 3v0a2 2 0 0 1 2 2v0c0 1.1.9 2 2 2v0a2 2 0 0 0 2-2v0c0-1.1.9-2 2-2h3.17" />
                    <path d="M11 21.95V18a2 2 0 0 0-2-2v0a2 2 0 0 1-2-2v-1a2 2 0 0 0-2-2H2.05" />
                    <circle cx="12" cy="12" r="10" />
                  </svg>
                </a>
              ) : null}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  @reference "tailwindcss";
  h2 {
    @apply text-base mb-1;
  }

  li {
    @apply dark:bg-stone-900 hover:dark:bg-stone-700 transition-all;
  }
</style>
