---
import { Image } from "astro:assets";
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  EXPERIENCE,
  EDUCATION,
  CERTIFICATES,
} from "../consts";
import Layout from "../layouts/Layout.astro";
import handsomeGuy from "../assets/images/handsomeGuy.png";
---

<Layout title={`${SITE_TITLE} - About Me`} description={SITE_DESCRIPTION}>
  <div class="w-[750px] max-w-[calc(100%_-_2em)] m-auto mt-10">
    <div class="flex w-full justify-center relative">
      <Image
        alt="Profile Image"
        width={400}
        height={400}
        src={handsomeGuy}
        class="object-cover object-center w-[400px] h-[400px]"
      />
      <div class="relative top-10 right-[120px]">
        <span
          class="bg-white dark:bg-black dark:text-white p-2 rounded-md hidden sm:inline shadow-md"
        >
          Hello World!
        </span>
      </div>
    </div>
    <div class="flex flex-col gap-3">
      <h1 class="box">Get to know more about me</h1>
      <div class="box">
        <h2>Introduction</h2>
        <p>
          Hi, I'm Justin Jiraratsakul. I am a student at Chulalongkorn
          University, studying electrical engineering. I have a deep interest in
          web development. I love to learn new things and conquer new
          challenges. Beyond web development, I also provision servers,
          configure routers, and much more. I also use Python for some of my
          work!
        </p>
      </div>
      <div class="box">
        <h2>Experience</h2>
        {
          EXPERIENCE.map((d) => (
            <div class="p-3">
              <div class="flex gap-3">
                <h3>{d.name}</h3>
                {d.githubUrl ? (
                  <a href={d.githubUrl} target="_blank">
                    <span class="sr-only">View this project on Github</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lucide lucide-github"
                    >
                      <>
                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                        <path d="M9 18c-4.51 2-5-2-7-2" />
                      </>
                    </svg>
                  </a>
                ) : null}
              </div>
              <h4 class="location">
                <small>
                  {d.location} | {d.date}
                </small>
              </h4>
              <ul class="mt-2">
                {d.description.map((desc) => (
                  <li>{desc}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div class="box">
        <h2>Education</h2>
        {
          EDUCATION.map((d) => (
            <div class="p-3">
              <div class="flex gap-3">
                <h3>{d.name}</h3>
              </div>
              <h4 class="location">
                <small>
                  {d.location} | {d.date}
                </small>
              </h4>
              <ul class="mt-2">
                {d.description.map((desc) => (
                  <li>{desc}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div class="box">
        <h2>Certificates</h2>
        {
          CERTIFICATES.map((d) => (
            <div class="p-3">
              <div>
                <div class="flex gap-3 items-center">
                  <h3>{d.name}</h3>
                  {d.url ? (
                    <a href={d.url} target="_blank">
                      <svg
                        width="24"
                        height="24"
                        viewBox="0 0 15 15"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          d="M3 2C2.44772 2 2 2.44772 2 3V12C2 12.5523 2.44772 13 3 13H12C12.5523 13 13 12.5523 13 12V8.5C13 8.22386 12.7761 8 12.5 8C12.2239 8 12 8.22386 12 8.5V12H3V3L6.5 3C6.77614 3 7 2.77614 7 2.5C7 2.22386 6.77614 2 6.5 2H3ZM12.8536 2.14645C12.9015 2.19439 12.9377 2.24964 12.9621 2.30861C12.9861 2.36669 12.9996 2.4303 13 2.497L13 2.5V2.50049V5.5C13 5.77614 12.7761 6 12.5 6C12.2239 6 12 5.77614 12 5.5V3.70711L6.85355 8.85355C6.65829 9.04882 6.34171 9.04882 6.14645 8.85355C5.95118 8.65829 5.95118 8.34171 6.14645 8.14645L11.2929 3H9.5C9.22386 3 9 2.77614 9 2.5C9 2.22386 9.22386 2 9.5 2H12.4999H12.5C12.5678 2 12.6324 2.01349 12.6914 2.03794C12.7504 2.06234 12.8056 2.09851 12.8536 2.14645Z"
                          fill="currentColor"
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                        />
                      </svg>
                    </a>
                  ) : null}
                </div>
                <h4 class="location">
                  <small>
                    {d.source} | {d.date}
                  </small>
                </h4>
              </div>
              <img src={d.thumbnail} class="w-full max-w-[24rem] py-3" />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
<style>
  h1,
  h2,
  h3,
  h4,
  h5 {
    font-family: "JetBrains Mono", monospace;
    font-weight: 400;
    line-height: 1.3;
  }

  h1 {
    margin-top: 0;
    font-size: 1.802rem;
  }

  h2 {
    font-size: 1.602rem;
  }

  h3 {
    font-size: 1.424rem;
  }

  h4 {
    font-size: 1.266rem;
  }

  h5 {
    font-size: 1.125rem;
  }

  small,
  .text_small {
    font-size: 0.889rem;
  }
  .location {
    @apply dark:text-green-400 text-sky-800;
  }
</style>
