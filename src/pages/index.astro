---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const projects = (await getCollection("projects")).filter(
  (a) => a.data.featured
);
---

<Layout title={`${SITE_TITLE} - Portfolio`} description={SITE_DESCRIPTION}>
  <div
    class="h-full grid md:grid-cols-5 md:grid-rows-2 md:p-16 md:gap-10 p-4 gap-4"
  >
    <div class="box dark:text-white p-4 md:col-span-2">
      <h1>
        <span class="text-sm md:text-base">Hi i'm{" "}</span>
        <br /><span
          class="text-2xl md:text-3xl p-1 font-bold bg-gradient-to-r from-violet-500 to-red-400 via-fuchsia-500 bg-clip-text text-transparent"
          >Justin Jiraratsakul</span
        >
      </h1>
      <h2 class="text-lg text-center mt-1">
        I love Coding, Tinkering and Having Fun
      </h2>
    </div>
    <div class="box md:col-span-3 md:row-span-2">
      <h2 class="text-base md:text-xl font-bold mb-4">
        Here are some of my projects
      </h2>
      <div>
        <ul class="flex gap-3 flex-col">
          {
            projects.map((post) => (
              <li class="border-2 dark:border-white border-black rounded-md p-4 flex md:flex-row flex-col gap-2 items-center justify-between">
                <a
                  class="w-full py-4 -my-4 pl-4 -ml-4"
                  href={`/project/${post.slug}/`}
                >
                  <h3 class="font-semibold">{post.data.title}</h3>
                  <h4 class="text-sm">{post.data.shortDescription}</h4>
                </a>
                <div class="md:flex flex-row gap-3 hidden">
                  {post.data.githubUrl ? (
                    <a href={post.data.githubUrl} target="_blank">
                      <span class="sr-only">View this repo on github</span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-github"
                      >
                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                        <path d="M9 18c-4.51 2-5-2-7-2" />
                      </svg>
                    </a>
                  ) : null}
                  {post.data.websiteUrl ? (
                    <a href={post.data.websiteUrl} target="_blank">
                      <span class="sr-only">View the live website</span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-globe-2"
                      >
                        <path d="M21.54 15H17a2 2 0 0 0-2 2v4.54" />
                        <path d="M7 3.34V5a3 3 0 0 0 3 3v0a2 2 0 0 1 2 2v0c0 1.1.9 2 2 2v0a2 2 0 0 0 2-2v0c0-1.1.9-2 2-2h3.17" />
                        <path d="M11 21.95V18a2 2 0 0 0-2-2v0a2 2 0 0 1-2-2v-1a2 2 0 0 0-2-2H2.05" />
                        <circle cx="12" cy="12" r="10" />
                      </svg>
                    </a>
                  ) : null}
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div class="box md:col-span-2">
      <h2 class="text-base md:text-xl font-bold">Let's Get In Touch</h2>
      <h3 class="text-sm md:text-base">
        If you have any inquiries or want to hire me, don't hesitate to contact
        me
      </h3>
      <div class="mt-1">
        <ul class="list-disc ml-6">
          <li>
            On Instagram: <a href="https://instagram.com/jus.jira" class="link"
              >@Jus.Jira</a
            >
          </li>
          <li>
            On Facebook: <a href="https://facebook.com/jus.jira" class="link"
              >@Jus.Jira</a
            >
          </li>
          <li>
            On Github: <a href="https://github.com/jusjira" class="link"
              >@JusJira</a
            >
          </li>
          <li>
            Via E-Mail: <a href="mailto:jus.jira@gmail.com" class="link"
              >jus.jira@gmail.com</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
<style>
  .link {
    @apply dark:text-green-400 text-sky-800 underline underline-offset-1;
  }
</style>
