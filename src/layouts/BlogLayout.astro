---
import { SITE_TITLE } from "../consts";
import Layout from "./Layout.astro";
const { title, heroImage, description, datePublished } = Astro.props;
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
---

<Layout
  title={`${SITE_TITLE} - Blog`}
  description={description}
  image={heroImage}
>
  <article class="max-w-5xl md:px-16 p-4 dark:text-white m-auto">
    <div>
      <div class="my-10">
        <h1 class="text-2xl lg:text-4xl font-bold text-center">{title}</h1>
        <Image
          class="m-auto my-6"
          src={heroImage}
          alt="Hero"
          title="Blog hero image"
          width={1200}
          height={630}
          loading="eager"
        />
        <FormattedDate date={datePublished} />
        <div class="text-base my-4">
          <span class="font-semibold">Description:</span><p>{description}</p>
        </div>
        <hr />
      </div>
      <div class="prose prose-neutral dark:prose-invert max-w-none">
        <slot />
      </div>
    </div>
  </article>
</Layout>
