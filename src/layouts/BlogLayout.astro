---
import { SITE_TITLE } from "../consts";
import Layout from "./Layout.astro";
const { title, heroImage, description, datePublished } = Astro.props;
import "../styles/project.css";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
---

<Layout
  title={`${SITE_TITLE} - Blog`}
  description={description}
  image={heroImage}
>
  <article class="w-[720px] max-w-[calc(100%_-_2em)] dark:text-white m-auto">
    <div>
      <div class="my-10">
        <h1 class="text-4xl font-bold text-center">{title}</h1>
        <Image class="m-auto mb-6" src={heroImage} alt="Hero Image" width={1200} height={630}/>
        <FormattedDate date={datePublished} />
        <div class="text-base my-4">
          <span class="font-semibold">Description:</span><p>{description}</p>
        </div>
        <hr />
      </div>
      <slot />
    </div>
  </article>
</Layout>
